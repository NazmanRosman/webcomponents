{
  "name": "@lrnwebcomponents/simple-wc",
  "wcfactory": {
    "className": "SimpleWc",
    "customElementClass": "HTMLElement",
    "elementName": "simple-wc",
    "generator-wcfactory-version": "0.7.4",
    "useHAX": false,
    "useSass": false,
    "files": {
      "css": "src/simple-wc.css",
      "scss": "src/simple-wc.scss",
      "html": "src/simple-wc.html",
      "js": "src/simple-wc.js",
      "properties": "src/simple-wc-properties.json",
      "hax": "src/simple-wc-hax.json"
    }
  },
  "version": "7.0.16",
  "description": "A simple web component wrapper to simplify consistent patterns of element creation",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "type": "module",
  "main": "simple-wc.js",
  "module": "simple-wc.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && prettier --ignore-path ../../.prettierignore --write \"**/*.{js,json}\" && wca analyze \"{*,lib/**}.js\" --format vscode --outFile custom-elements.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "web-dev-server -c ../../web-dev-server.config.mjs",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox --watch",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve --config=../../web-test-runner.config.mjs --playwright --browsers chromium firefox"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^7.0.16",
    "@open-wc/testing": "3.2.0",
    "@web/dev-server": "0.3.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "8.2.0",
    "wct-browser-legacy": "1.0.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ],
  "gitHead": "3f01a081c0e9953e959deffdbcba9a7dca1eeb65"
}
